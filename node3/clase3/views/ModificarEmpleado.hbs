<div class="container">
    <h1>Modificar Empleado:</h1>
    <div class="row">
        <div class="col-8">
            <form method="POST" action="/empleados/update/{{id}}">
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" class="form-control" name="nombre" value="{{nombre}}">
                    <label for="apellido">Apellido:</label>
                    <input type="text" class="form-control" name="apellido" value="{{apellido}}">
                    <label for="id_sucursal">id_sucursal:</label>
                    <select name="id_sucursal" class="form-select">
                        <option value="{{id_sucursal}}">{{nombreSucursal}}</option>
                        {{#each nombres}}
                        <option value="{{id}}">{{nombre}}</option>
                        {{/each}}
                    </select>
                    <label for="sueldo">Sueldo:</label>
                    <input type="number" class="form-control" name="sueldo" value="{{sueldo}}" min="1">
                    <label for="antiguedad">Antiguedad:</label>
                    <input type="number" class="form-control" name="antiguedad" value="{{antiguedad}}" min="0">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>